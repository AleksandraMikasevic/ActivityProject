@model Student
@{
    ViewBag.Title = "Delete student";
}



<div class="forma">
    <div class="main-div">
        <div class="panel">
            <h2>Delete student</h2>
            <p>Informations about student</p>
        </div>
        <form method="post" asp-action="DeletePost" asp-controller="Student" asp-route-id="@Model.ID">

            <div class="form-group">
                <label asp-for="ID"></label>
                <input disabled asp-for="ID" placeholder="ID" class="form-control" type="text" name="ID" value=@Model.ID />
            </div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input disabled asp-for="FirstName" placeholder="First name" class="form-control" type="text" name="FirstName" value=@Model.FirstName />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input disabled asp-for="LastName" placeholder="Last name" class="form-control" type="text" name="LastName" value=@Model.LastName />
            </div>
            <div class="form-group">
                <label asp-for="TranscriptNumber">Broj indeksa</label>
                <input disabled asp-for="TranscriptNumber" placeholder="Transcript number" class="form-control" type="text" name="TranscriptNumber" value=@Model.TranscriptNumber />
            </div>
            <button type="submit" class="btn btn-primary" name="save">Delete</button>
        </form>
    </div>
</div>
